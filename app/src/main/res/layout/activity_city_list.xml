<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_gravity="center"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.mineui.CityListActivity">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="新增收货地址"
        android:gravity="center"
        android:textSize="@dimen/sp_16"
        android:textColor="@color/text_color_six"
        android:layout_marginTop="@dimen/dp_40"
        />
    <android.support.constraint.ConstraintLayout
        android:layout_marginTop="@dimen/dp_20"
        android:layout_width="@dimen/dp_312"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:padding="@dimen/dp_20"
        android:background="@drawable/selector_background_ziliao"
        >
        <TextView
            android:id="@+id/myName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="收件人"
            android:textSize="@dimen/sp_14"
            android:textColor="@color/text_color_six"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginBottom="@dimen/dp_10"
            app:layout_constraintTop_toBottomOf="@id/icon_view"
            android:layout_marginTop="@dimen/dp_10"

            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintRight_toRightOf="parent"
            android:text="我是狂吃不胖的小姐姐"
            android:textSize="@dimen/sp_12"
            android:textColor="#999999"
            app:layout_constraintBottom_toBottomOf="@id/myName"

            />
        <View
            android:id="@+id/viewTwo"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:background="@drawable/shape_text_mine"
            app:layout_constraintTop_toBottomOf="@id/myName"
            android:layout_marginTop="@dimen/dp_10"
            />
        <TextView
            android:id="@+id/myPassword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="手机号码"
            android:textSize="@dimen/sp_14"
            android:textColor="@color/text_color_six"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginBottom="@dimen/dp_10"
            app:layout_constraintTop_toBottomOf="@id/viewTwo"
            android:layout_marginTop="@dimen/dp_10"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintRight_toRightOf="parent"
            android:text="1234567896"
            app:layout_constraintBottom_toBottomOf="@id/myPassword"
            />
        <View
            android:id="@+id/viewThree"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:background="@drawable/shape_text_mine"
            app:layout_constraintTop_toBottomOf="@id/myPassword"
            android:layout_marginTop="@dimen/dp_10"
            />
        <TextView
            android:id="@+id/mycity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="所在地区"
            android:textSize="@dimen/sp_14"
            android:textColor="@color/text_color_six"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginBottom="@dimen/dp_10"
            app:layout_constraintTop_toBottomOf="@id/viewThree"
            android:layout_marginTop="@dimen/dp_10"
            />
        <TextView
            android:id="@+id/adresss"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintRight_toRightOf="parent"
            android:text="1234567896"
            app:layout_constraintBottom_toBottomOf="@id/mycity"
            />
        <View
            android:id="@+id/viewFour"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:background="@drawable/shape_text_mine"
            app:layout_constraintTop_toBottomOf="@id/mycity"
            android:layout_marginTop="@dimen/dp_10"
            />
        <TextView
            android:id="@+id/myXiangxicity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="详细地址"
            android:textSize="@dimen/sp_14"
            android:textColor="@color/text_color_six"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginBottom="@dimen/dp_10"
            app:layout_constraintTop_toBottomOf="@id/viewFour"
            android:layout_marginTop="@dimen/dp_10"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintRight_toRightOf="parent"
            android:text="1234567896"
            app:layout_constraintBottom_toBottomOf="@id/myXiangxicity"
            />
        <View
            android:id="@+id/viewFive"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:background="@drawable/shape_text_mine"
            app:layout_constraintTop_toBottomOf="@id/myXiangxicity"
            android:layout_marginTop="@dimen/dp_10"
            />

    </android.support.constraint.ConstraintLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/dp_100"
        />

</LinearLayout>