<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="@dimen/dp_24"
    android:paddingRight="@dimen/dp_24"
    >
    <include layout="@layout/toolbar"/>
    <Button
        android:layout_width="@dimen/dp_312"
        android:layout_height="@dimen/dp_40"
        android:layout_marginBottom="@dimen/dp_20"
        android:text="暂无收货地址 点击添加"
        android:textColor="#ff5f71"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/shopping_but_addr"
        />
    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="420dp"
        android:layout_gravity="center"
        android:paddingLeft="@dimen/dp_10"
        android:paddingRight="@dimen/dp_10"
        android:paddingTop="@dimen/dp_20"
        android:background="@drawable/shopping_but_addr"
        >
        <android.support.v7.widget.RecyclerView
            android:id="@+id/allordersRecycle"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/dingdan"
            ></android.support.v7.widget.RecyclerView>

    </android.support.constraint.ConstraintLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50"
        >
        <TextView
            android:id="@+id/relativeTv4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="共"
            android:layout_alignParentLeft="true"
            android:layout_marginTop="@dimen/dp_15"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/allordersCount"
            android:textColor="#f00"
            android:text="2"
            android:layout_marginTop="@dimen/dp_15"
            android:layout_toRightOf="@id/relativeTv4"
            />
        <TextView
            android:id="@+id/relativeTv5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_15"
            android:layout_toRightOf="@id/allordersCount"
            android:text="件商品，需付款"
            />
        <TextView
            android:id="@+id/allordersPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/relativeTv5"
            android:text="840.00"
            android:textColor="#f00"
            android:layout_marginTop="@dimen/dp_15"
            />
        <TextView
            android:id="@+id/yuan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="元"
            android:layout_marginTop="@dimen/dp_15"
            android:layout_toRightOf="@id/allordersPrice"
            />
        <TextView
            android:layout_width="@dimen/dp_80"
            android:layout_height="@dimen/dp_50"
            android:layout_alignParentRight="true"
            android:background="@drawable/qujiesuan"
            android:text="提交订单"
            android:gravity="center"
            android:textColor="#ffffff"
            android:textSize="@dimen/sp_16"
            />
    </RelativeLayout>
</LinearLayout>