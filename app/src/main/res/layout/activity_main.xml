<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:fitsSystemWindows="true"
    android:clipToPadding="true"
    android:orientation="vertical"
    android:background="@mipmap/login_register_background"
    tools:context=".MainActivity">

    <!--这个是隐藏的布局，然后通过动态的设置高度达到效果-->


    <android.support.constraint.ConstraintLayout
        android:id="@+id/buju1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_36"
        android:layout_marginRight="@dimen/dp_36"
        android:layout_marginTop="@dimen/dp_140"
        >
        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/group"
            android:layout_marginRight="20dp"
            >
            <ImageButton
                android:id="@+id/login_phone"
                android:layout_width="@dimen/dp_22"
                android:layout_height="@dimen/dp_30"
                android:layout_marginLeft="10dp"
                android:background="@drawable/login_icon_phone_n_xhdpi"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginRight="@dimen/dp_20"
                />

        </RadioGroup>
        <EditText
            android:id="@+id/activity_login_phone"
            android:layout_width="@dimen/dp_0"
            android:layout_height="wrap_content"
            android:inputType="number"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:background="@null"
            android:layout_marginLeft="@dimen/dp_50"
            android:maxLength="11"
            android:hint="手机号"
            android:textSize="@dimen/sp_18"
            android:layout_gravity="center"
            android:textColorHint="@color/white"
            android:textColor="@color/white"
            />

    </android.support.constraint.ConstraintLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@drawable/textview_border"
        app:layout_constraintBottom_toBottomOf="@id/buju1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/buju1"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginLeft="@dimen/dp_36"
        android:layout_marginRight="@dimen/dp_36"
        />
    <android.support.constraint.ConstraintLayout
        android:id="@+id/buju2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_30"
        android:layout_marginLeft="@dimen/dp_36"
        android:layout_marginRight="@dimen/dp_36"
        >
        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/pass_group"
            android:layout_marginRight="@dimen/dp_20"
            android:layout_marginBottom="@dimen/dp_10"
            >
            <ImageButton
                android:id="@+id/login_pass"
                android:layout_width="@dimen/dp_22"
                android:layout_height="@dimen/dp_30"
                android:layout_marginLeft="@dimen/dp_10"
                android:background="@mipmap/login_icon_lock"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginRight="@dimen/dp_20"
                />
        </RadioGroup>
        <EditText
            android:id="@+id/activity_login_password"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:background="@null"
            android:layout_marginLeft="50dp"
            android:password="true"
            android:hint="登录密码"
            android:textSize="@dimen/sp_18"
            android:layout_gravity="center"
            android:textColorHint="@color/white"
            android:textColor="@color/white"
            android:maxLength="20"
            />
        <ImageButton
            android:id="@+id/Passwordswitching"
            android:layout_width="@dimen/dp_24"
            android:layout_height="@dimen/dp_24"
            android:background="@drawable/ic_action_eye"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            />

    </android.support.constraint.ConstraintLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@drawable/textview_border"
        app:layout_constraintBottom_toBottomOf="@id/buju2"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/buju2"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginLeft="@dimen/dp_36"
        android:layout_marginRight="@dimen/dp_36"
        />
    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_36"
        android:layout_marginRight="@dimen/dp_36"
        android:layout_marginTop="@dimen/dp_20"
        >
        <android.support.v7.widget.AppCompatCheckBox
            android:id="@+id/Rememberpassword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:theme="@style/MyCheckbox"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp_14"
            android:text="记住密码"
            android:textColor="@color/white"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@id/Rememberpassword"
            android:layout_marginLeft="@dimen/dp_10"
            app:layout_constraintTop_toTopOf="parent"
            />
        <TextView
            android:id="@+id/register"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:textSize="@dimen/sp_14"
            android:text="快速注册"
            android:textColor="@color/white"
            />
    </android.support.constraint.ConstraintLayout>

        <Button
            android:id="@+id/loginSubmit"
            android:layout_width="@dimen/dp_280"
            android:layout_height="@dimen/dp_40"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:textSize="@dimen/sp_18"
            android:text="登录"
            android:textColor="#ff5f71"
            android:layout_marginLeft="@dimen/dp_36"
            android:layout_marginRight="@dimen/dp_36"
            android:background="@drawable/shape_stroke_edit"
            android:layout_marginTop="@dimen/dp_80"
            android:layout_marginBottom="@dimen/dp_120"
            />

</LinearLayout>
